model RefreshToken {
    id String @id @default(cuid())
    tokenHash String
    expiresAt DateTime
    revoked Boolean @default(false)


    user User @relation("UserRefreshToken",fields: [userId], references: [id])
    userId String @unique

    createdAt DateTime @default(now())

    @@index([userId])
    @@index([revoked,expiresAt])
}
